@model BibliotecaNA.Models.Domain.Autor
@{
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <h3 class="pink-tlt">Adicionar Autores</h3>
            <form asp-action="Add" method="post">
                <div class="form-group">
                    <label asp-for="Nome">Nome do autor *</label>
                    <input type="text" class="form-control" asp-for="Nome" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                @if (TempData["msg"] != null)
                {
                    <div class="form-group">
                        @TempData["msg"]
                    </div>
                }
                <div class="form-group pt-3">
                    <button type="submit" class="btn add-btn"><i class="bi bi-save"></i> Adicionar</button>
                    <a href="/Autor/GetAll" class="btn btn-dark"> <i class="bi bi-list"></i>Listar autores</a>
                </div>

            </form>
        </div>
    </div>
</div>
